<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snooze_options_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_box"
        android:padding="16dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/snoozeBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snooze Option 1" android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/snoozeBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snooze Option 2" android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/snoozeBtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snooze Option 3" android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/snoozeBtnOthers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Others"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>